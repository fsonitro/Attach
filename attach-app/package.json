{
  "name": "attach",
  "version": "0.0.9",
  "description": "A macOS Electron app to mount and browse network shares.",
  "main": "dist/main/index.js",
  "scripts": {
    "build-ts": "tsc",
    "start": "npm run build-ts && electron .",
    "build": "npm run build-ts && electron-builder",
    "dev": "npm run build-ts && electron . --dev",
    "watch": "tsc --watch"
  },
  "keywords": [
    "electron",
    "macOS",
    "network",
    "shares",
    "mount"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.2.0",
    "is-online": "^11.0.0",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@types/is-online": "^8.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.4.0"
  },
  "build": {
    "appId": "com.fsonitro.attach",
    "productName": "Attach",
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "assets/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "assets/**/*"
    ],
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/folders.png",
      "bundleVersion": "0.0.9",
      "extendInfo": {
        "LSUIElement": false,
        "CFBundleDisplayName": "Attach",
        "CFBundleName": "Attach",
        "CFBundleIdentifier": "com.fsonitro.attach"
      }
    }
  }
}
